{
    "name": "angular-upgrade-assistant",
    "displayName": "Angular Upgrade Assistant",
    "description": "Assists with Angular version upgrades by analyzing, patching, and documenting migration steps",
    "version": "0.0.1",
    "publisher": "your-publisher-name",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:angularUpgrade.start"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "angularUpgrade.start",
                "title": "Angular Upgrade: Start Migration"
            },
            {
                "command": "angularUpgrade.configure",
                "title": "Angular Upgrade: Configure LLM Provider"
            }
        ],
        "configuration": {
            "title": "Angular Upgrade Assistant",
            "properties": {
                "angularUpgrade.llmProvider": {
                    "type": "string",
                    "enum": [
                        "copilot",
                        "openai",
                        "gemini",
                        "bedrock",
                        "groq",
                        "none"
                    ],
                    "default": "copilot",
                    "description": "LLM provider to use for generating code patches",
                    "enumDescriptions": [
                        "GitHub Copilot (requires Copilot extension)",
                        "OpenAI GPT (requires API key)",
                        "Google Gemini (requires API key)",
                        "AWS Bedrock (requires AWS credentials)",
                        "Groq (requires API key)",
                        "None - skip LLM patch generation"
                    ]
                },
                "angularUpgrade.openaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenAI API key (stored in VS Code settings)",
                    "markdownDescription": "OpenAI API key. Get one at [platform.openai.com](https://platform.openai.com/api-keys)"
                },
                "angularUpgrade.openaiModel": {
                    "type": "string",
                    "default": "gpt-4",
                    "enum": [
                        "gpt-4",
                        "gpt-4-turbo",
                        "gpt-3.5-turbo"
                    ],
                    "description": "OpenAI model to use"
                },
                "angularUpgrade.geminiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Google Gemini API key",
                    "markdownDescription": "Gemini API key. Get one at [ai.google.dev](https://ai.google.dev/)"
                },
                "angularUpgrade.geminiModel": {
                    "type": "string",
                    "default": "gemini-pro",
                    "enum": [
                        "gemini-pro",
                        "gemini-1.5-pro",
                        "gemini-1.5-flash"
                    ],
                    "description": "Gemini model to use"
                },
                "angularUpgrade.bedrockRegion": {
                    "type": "string",
                    "default": "us-east-1",
                    "description": "AWS region for Bedrock"
                },
                "angularUpgrade.bedrockModelId": {
                    "type": "string",
                    "default": "anthropic.claude-3-5-sonnet-20241022-v2:0",
                    "enum": [
                        "anthropic.claude-3-5-sonnet-20241022-v2:0",
                        "anthropic.claude-3-sonnet-20240229-v1:0",
                        "anthropic.claude-3-haiku-20240307-v1:0",
                        "meta.llama3-70b-instruct-v1:0"
                    ],
                    "description": "AWS Bedrock model ID to use"
                },
                "angularUpgrade.groqApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Groq API key",
                    "markdownDescription": "Groq API key. Get one at [console.groq.com](https://console.groq.com/keys)"
                },
                "angularUpgrade.groqModel": {
                    "type": "string",
                    "default": "llama3-70b-8192",
                    "enum": [
                        "llama3-70b-8192",
                        "llama3-8b-8192",
                        "mixtral-8x7b-32768",
                        "gemma-7b-it"
                    ],
                    "description": "Groq model to use"
                },
                "angularUpgrade.packagesToUpdate": {
                    "type": "array",
                    "default": [
                        "@angular/cli",
                        "@angular/core"
                    ],
                    "description": "List of packages to update during migration",
                    "items": {
                        "type": "string"
                    }
                },
                "angularUpgrade.maxPatchesPerRun": {
                    "type": "number",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Maximum number of patches to generate per migration run"
                },
                "angularUpgrade.enableMockMode": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable mock/demo mode when no LLM is configured (for testing)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "ts-morph": "^21.0.0",
        "axios": "^1.6.0"
    },
    "optionalDependencies": {
        "@aws-sdk/client-bedrock-runtime": "^3.525.0"
    }
}